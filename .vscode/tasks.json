{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "clang single-file compilation.", //label：需要与launch.json中的preLaunchTask保持一致，否则调试时会提示找不到；
      "command": "clang++", //编译器所在的位置
      //编译参数，如果你在命令行用过gcc编译器应该知道这些选项和值都是啥。clang++命令的选项与gcc的类似
      "args": [
        "-g",
        "${file}", //这里是单文件编译的 如果要变成多文件编译的话要改下  改成${fileDirname}\\*.cpp
        "-o",
        "${workspaceFolder}/build/${fileBasenameNoExtension}.exe" // ${fileDirname} 是当前文件目录
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "调试器生成的任务。"
    },
    {
      "type": "cppbuild",
      "label": "clang multi-file compilation.", //label：需要与launch.json中的preLaunchTask保持一致，否则调试时会提示找不到；
      "command": "clang++", //编译器所在的位置
      //编译参数，如果你在命令行用过gcc编译器应该知道这些选项和值都是啥。clang++命令的选项与gcc的类似
      "args": [
        "-g",
        // "${file}", //这里是单文件编译的 如果要变成多文件编译的话要改下  改成${fileDirname}\\*.cpp
        "-I",
        "${fileDirname}/include",
        "${fileDirname}/*.cc",
        "-o",
        "${workspaceFolder}/build/${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "调试器生成的任务。"
    },
    {
      "label": "cmake compilation",
      "type": "shell",
      "command": "cmake --preset default",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "cmake",
      "type": "shell",
      "command": "ninja",
      "args": [],
      "options": {
        "cwd": "${workspaceFolder}/build/default"
      },
      "group": "build",
      "presentation": {
        "reveal": "always"
      },
      // "dependsOn": [
      //   "cmake compilation"
      // ],
      "problemMatcher": []
    },
    {
      "label": "cmake debug",
      "type": "shell",
      "command": "ninja",
      "options": {
        "cwd": "${workspaceFolder}/build/debug"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "cmake debug compilation",
      "type": "shell",
      "command": "cmake --preset debug",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
  ],
  "version": "2.0.0"
}